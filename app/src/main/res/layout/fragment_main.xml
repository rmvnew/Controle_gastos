    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerMain">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="700dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="5dp">

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </HorizontalScrollView>

    <Spinner
        android:id="@+id/spinnerMain"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_despesas" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Despesas:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/spinnerMain"
        app:layout_constraintTop_toBottomOf="@+id/btn_despesas" />

    <Button
        android:id="@+id/btn_historico"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/AZUL_STEEL_BLUE2"
        app:icon="@drawable/ic_history"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:text="Historico"
        app:layout_constraintEnd_toStartOf="@+id/btn_consumo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_consumo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/AZUL_STEEL_BLUE2"
        app:icon="@drawable/ic_tonality"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:text="Consumo"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_historico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_historico" />

    <Button
        android:id="@+id/btn_usuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/AZUL_STEEL_BLUE2"
        app:icon="@drawable/ic_person_add_black_24dp"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:text="usuÃ¡rio"
        app:layout_constraintEnd_toStartOf="@+id/btn_despesas"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_historico" />

    <Button
        android:id="@+id/btn_despesas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/AZUL_STEEL_BLUE2"
        app:icon="@drawable/ic_monetization_on_black_24dp"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:text="despesas"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_usuario" />

</androidx.constraintlayout.widget.ConstraintLayout>